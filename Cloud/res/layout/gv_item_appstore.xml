<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridview_item_layout"
    android:layout_width="104dp"
    android:layout_height="104dp"
    android:orientation="vertical"
    android:background="@drawable/file_manager_selector" >
    
    <TextView
        android:id="@+id/appupgrade"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="54dp"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="@string/app_upgrade"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:singleLine="true" />
    

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginLeft="23.5dp"
        android:src="@drawable/public_defaulticon01"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/black" />

</LinearLayout>