<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_view_height" >

    <TextView
        android:id="@+id/backText"
        android:layout_width="@dimen/title_view_backText_width"
        android:layout_height="@dimen/title_view_backText_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/public_arrow03" />

    <TextView
        android:id="@+id/titleText"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/rightBtn"
        android:layout_width="@dimen/title_view_btn_width"
        android:layout_height="@dimen/title_view_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/title_view_btn_margin_right"
        android:background="@drawable/title_right_selector"
        android:gravity="center"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:textSize="@dimen/title_view_btn_text_size" />
    
    <Button
        android:id="@+id/searchBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/icon_04index_search01"
        android:gravity="center"
        android:visibility="gone"/>

</RelativeLayout>