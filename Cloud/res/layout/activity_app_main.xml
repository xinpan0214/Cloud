<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.gvtv.android.cloud.view.SlippingViewPager
        android:id="@+id/slipping_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/coverLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <View
            android:id="@+id/addAppTipView"
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/index_instructions" />

        <TextView
            android:id="@+id/pageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="18dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/userBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/icon_04index_account" />

        <Button
            android:id="@+id/setBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="72dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/icon_04index_setting" />

        <Button
            android:id="@+id/fileManagerBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@+id/setBtn"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/icon_04index_filemanagement" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@+id/fileManagerBtn"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/icon_04index_search" />
    </RelativeLayout>

</merge>