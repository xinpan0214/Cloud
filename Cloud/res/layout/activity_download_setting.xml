<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mycloud="http://schemas.android.com/apk/res/com.gvtv.android.cloud"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.gvtv.android.cloud.view.TitleView
        android:id="@+id/downloadsetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        mycloud:right_visibility="false"
        mycloud:title="@string/download_setting" >
    </com.gvtv.android.cloud.view.TitleView>

    <RelativeLayout
        android:id="@+id/rlye_toggle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/downloadsetting" >

        <TextView
            android:id="@+id/tv_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/speed_limite_tip"
            android:textColor="@color/email_color"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/toggle_speed"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/checkbox_selector"
            android:button="@null"
            android:checked="false"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:textOff=""
            android:textOn="" />
        
        <View
	        android:id="@+id/line1"
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:layout_alignParentBottom="true"
	        android:background="@color/about_line_color" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_upload_speed_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlye_toggle"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="38dp"
        android:text="@string/upload_speed_tip"
        android:textColor="@color/email_color"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/seekbar_upload"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_upload_speed_tip"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:progressDrawable="@drawable/seekbar_progressdrawable"
        android:thumb="@drawable/equipment_pic0706" />

    <TextView
        android:id="@+id/tv_upload_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/seekbar_upload"
        android:layout_below="@id/seekbar_upload"
        android:text="1KB/S"
        android:textColor="@color/hint_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_upload_speed_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar_upload"
        android:layout_alignLeft="@id/seekbar_upload"
        android:text="1KB/S"
        android:textColor="@color/line_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_upload_speed_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar_upload"
        android:layout_centerHorizontal="true"
        android:text="25KB/S"
        android:textColor="@color/line_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_upload_speed_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar_upload"
        android:layout_alignRight="@id/seekbar_upload"
        android:text="50KB/S"
        android:textColor="@color/line_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_download_speed_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekbar_upload"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="38dp"
        android:text="@string/download_speed_tip"
        android:textColor="@color/email_color"
        android:textSize="15sp" />

    <SeekBar
        android:id="@+id/seekbar_download"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_download_speed_tip"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:progressDrawable="@drawable/seekbar_progressdrawable"
        android:thumb="@drawable/equipment_pic0706" />

    <TextView
        android:id="@+id/tv_download_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/seekbar_download"
        android:layout_below="@id/seekbar_download"
        android:text="1KB/S"
        android:textColor="@color/hint_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_download_speed_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar_download"
        android:layout_alignLeft="@id/seekbar_download"
        android:text="1KB/S"
        android:textColor="@color/line_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_download_speed_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar_download"
        android:layout_centerHorizontal="true"
        android:text="450KB/S"
        android:textColor="@color/line_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_download_speed_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar_download"
        android:layout_alignRight="@id/seekbar_download"
        android:text="900KB/S"
        android:textColor="@color/line_color"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_restore_setting"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/seekbar_download"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn_selector"
        android:text="@string/restore_setting"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>